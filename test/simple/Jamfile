# This example assumes that the .fbs files are defined in a
# directory tree.

import testing ;

import flatc ;

exe program
  : # sources
    main.cpp

    a0.fbs
    a1.fbs

    flatbuffers
  ;

run program : : : : run-program ;

lib flatbuffers ;
